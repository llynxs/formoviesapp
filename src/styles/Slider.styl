.slider {
	display flex
	flex-wrap wrap
	overflow hidden
	max-height 230px
	min-height 230px
	width 80%
	margin 0 auto
	padding 0 30px
	position relative
	
	.left, .right {
		background #fff
		color #000
		position absolute
		width 30px
	}
	
	.left {
		left 0
		top 0
		bottom 0
	}
	
	.right {
		right 0
		top 0
		bottom 0
	}
	
	&-wrapper {
		position absolute
	}
	
	.movies {
		&-item {
			width auto
			display inline-block
			max-width 150px
			height 100%
			height 0
			
			&__info {
				position relative
				padding-bottom 0
			}
			
			&__description {
				// position absolute
				bottom 0
				width 100%
			}
			
			&__poster {
			 	a {
			 		img {
			 			width: auto
			 			height: auto
			 		}
			 	}
			}
		}
	}
	
	h4 {
		font-size 10px
	}
}
