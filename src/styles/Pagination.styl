.pages {
	&-list {
		&__item {
			display inline-block
		}
		
		li {
			display: inline-block
			padding 10px
			border 1px solid #ccc
			border-radius 2px
			margin 0 5px
		}
	}
}

.pagination {
	padding 20px
	background rgba($colorLightPoint, .25)
	
	&-list {
		display flex
		align-items center
		justify-content center
		
		&-pages {
			display flex
		}
		
		&-item {
			padding 0 !important
			min-width auto !important
			min-height auto !important
			margin 0 2px !important
			height 100% !important
			position relative
			
			
			span {
				display flex
				width 100%
				height 100%
			}
			
			&__link {
				display inline-block
				width 100%
				height 100%
				padding 10px 15px
				border-radius 4px
			}
		}
	}
	
	&-item {
		&-button {
			background $colorLightPoint !important
			
			
			&__link {
				display inline-block
				width 100%
				height 100%
			}
		}
	}
	
	.pagination-item-button {
		min-width auto
		background blue !important
	}
}

.active {
	background rgba($mainColor, .2) !important
}